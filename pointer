int main(){
    //299page 문제 13-3
    
    int arr[5] = {1, 2, 3, 4, 5};
    int *ptr = (arr+4);
    int sum =0;
    for(int i =4; i>=0; i--)
    {
        sum += *ptr;
        --ptr;
    }
    printf("%d\n", sum);

    return 0;
}
