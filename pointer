/*
#include<stdio.h>

int main(){
    //299page 문제 13-4
    
    int arr[6] = {1, 2, 3, 4, 5, 6};
    int *ptr1 = arr;
    int *ptr2 = (arr+5);
    int arr2[6] = {0};

    for(int i=0; i<6; i++)
    {
        arr2[i] = *(ptr2-i);
    }

    for(int i = 0; i<6; i++)
    {
        *(ptr1+i)= arr2[i];
        printf("%d ", arr[i]);
    }
    return 0;
